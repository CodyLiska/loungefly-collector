<h3>Add A Backpack</h3>
<div class="row">
  <form action="/backpacks" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" id="bg_name" name="bg_name" />
        <label for="bg_name">Backpack Name</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <input type="text" id="bg_img" name="bg_img" />
        <label for="bg_img">Backpack Image</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <input type="text" id="bg_price" name="bg_price" />
        <label for="bg_price">Backpack Price</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <input type="text" id="bg_series" name="bg_series" />
        <label for="bg_series">Series or Collection</label>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>